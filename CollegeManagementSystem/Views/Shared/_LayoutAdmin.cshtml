@{




    string adminname = Convert.ToString(Session["name"]);
    string Role = Convert.ToString(Session["Role"]);
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <link href="~/Lib/twitter-bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Lib/bootstrap-notify/css/bootstrap-notify.min.css" rel="stylesheet" />
    <style>
        /* Reset some default styles */
        body, h1, h2, h3, ul, p {
            margin: 0;
            padding: 0;
        }

        /* Basic styling */
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f0f0;
            background-image: url('../../images/pexels-marta-siedlecka-586570.jpg');
            background-size: cover;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: rgb(0 0 0 / 0.60);
            backdrop-filter: blur(10px);
            color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }

        /* .logo img {
            height: 50px;
            margin-right: 20px;
        }*/

        .sidebar {
            width: 23%;
            background-color: rgb(0 0 0 / 0.60);
            backdrop-filter: blur(10px);
            color: #fff;
            padding: 30px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
            height: 100vh;
        }

            .sidebar nav ul {
                list-style-type: none;
                padding: 0;
            }

            .sidebar nav li {
                margin-bottom: 30px;
            }

            .sidebar nav a {
                text-decoration: none;
                color: #fff;
                font-weight: bold;
                display: block;
                transition: 0.3s;
                padding: 10px 0;
            }

                .sidebar nav a:hover {
                    background-color: #2c3e52;
                    color: #ffbf00;
                    padding-left: 20px;
                }

        main {
            flex-grow: 1;
            padding: 20px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        }

        footer {
            text-align: center;
            padding: 10px;
            background-color: #2a3f54;
            color: #fff;
        }

        .body {
            display: flex;
            flex-direction: row;
        }

        .mainpanel {
            width: 100%;
            background-color: rgb(255 255 255 / 0.70);
            backdrop-filter: blur(10px);
        }


        .modal-backdrop {
            position: inherit;
        }
    </style>
    @RenderSection("css", required: false)

</head>
<body>
    <header>
        <h1>Hello | @adminname</h1>

        <a href="@Url.Action("LogOut", "Account")">

            <button type="submit">Logout</button>
        </a>

    </header>

    <div class="body">
        <div class="sidebar">
            <nav>
                @if (Role == "Admin")
                {
                    <ul>
                        <li><a href="@Url.Action("Dashboard", "Admin", new {area=""})">Dashboard</a></li>
                        <li><a href="@Url.Action("Index", "Admin", new {area=""})">Users</a></li>
                        <li><a href="@Url.Action("ViewCourses", "Master", new {area=""})">List Of Course(s)</a></li>
                        <li><a href="@Url.Action("ViewDepartments", "Master", new {area=""})">List Of Department(s)</a></li>
                        <li><a href="@Url.Action("AttendanceManagement", "Admin", new {area=""})">Attendance Management</a></li>
                        <li><a href="@Url.Action("Index", "FeeManage", new {area=""})">Fees Management</a></li>
                        <li><a href="@Url.Action("LibraryManagement", "Admin", new {area=""})">Library Management</a></li>
                        <li><a href="@Url.Action("PlacementManagement", "Admin", new {area=""})">Placement Management</a></li>
                    </ul>

                }
                else if (Role == "Student")
                {
                    <ul>
                        <li><a href="@Url.Action("profile", "Student", new {area=""})">profile</a></li>
                        <li><a href="@Url.Action("AttendanceDetails", "Student", new {area=""})">Attendance Details </a></li>
                        <li><a href="@Url.Action("SemesterDetails", "Student", new {area=""})">Semester Details </a></li>
                        <li><a href="@Url.Action("LibraryDetails", "Student", new {area=""})">Library Details </a></li>
                        <li><a href="@Url.Action("PlacementDetails", "Student", new {area=""})">Placement Details </a></li>

                    </ul>
                }
                else if (Role == "Faculty")
                {
                    <ul>
                        <li><a href="@Url.Action("Profile", "Faculty", new {area=""})">profile</a></li>
                        <li><a href="@Url.Action("MarkAttendance", "Attendance", new {area=""})">Mark Attendance </a></li>
                        <li><a href="@Url.Action("SalaryDetails", "Faculty", new {area=""})">Salary Details </a></li>
                    </ul>
                }

            </nav>
        </div>
        <div class="mainpanel">
            @RenderBody()
        </div>
    </div>


    <script src="~/Lib/jquery/jquery.min.js"></script>
    @*<script src="~/Lib/jquery/jquery.slim.min.js"></script>*@
    <script src="~/Lib/twitter-bootstrap/js/bootstrap.min.js"></script>

    @*<script src="~/Lib/popper.js/umd/popper.min.js"></script>*@
    <!-- Latest compiled JavaScript -->
    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>*@
    @*<script src="~/Lib/twitter-bootstrap/js/bootstrap.bundle.min.js"></script>*@
    <script src="~/Lib/bootstrap-notify/js/bootstrap-notify.min.js"></script>
    <script src="~/Lib/parsley.js/parsley.min.js"></script>

    <script type="text/javascript">
           @Html.Raw(HttpUtility.HtmlDecode(ViewBag.Notify))

            var IsNotify = @((TempData["Notify"] != null).ToString().ToLower());
            if (IsNotify == true) {
                @Html.Raw(HttpUtility.HtmlDecode((string)TempData["Notify"]))
            }

        console.log(@adminname)
        var parsleyConfig = {
            errorsContainer: function (pEle) {
                var $err = pEle.$element.closest('.form-group').find('.help-block');
                return $err;
            }
        }
    </script>
    @RenderSection("scripts", required: false)
</body>
</html>