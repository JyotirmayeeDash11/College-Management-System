@model List<CollegeManagementSystem.Models.CoursesModel>
@{
    ViewBag.Title = "List of Courses";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

@section css {}
<style>
    input#btnSearch {
        height: 31px;
        line-height: 30px;
        padding: 0px 11px;
        font-size: 13px;
        border-radius: 0 25px 25px 0;
    }

    .panel .panel-heading input[type=text] {
        border-radius: 25px 0 0 25px;
        box-shadow: none;
        border-color: none;
        height: 30px;
        border: none;
        margin-right: 0;
    }

    .btn-group-sm > .btn, .btn-sm i.fa.fa-plus-square {
        margin-right: 3px;
    }

    a.btn.btn-primary.btn-sm {
        border-radius: 25px;
    }

    .panel-heading .input-group {
        box-shadow: none;
    }
</style>
<div class="row container">
    <div class="col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h4 class="panel-title pull-left">@ViewBag.Title</h4>
                <div class="input-group pull-right">

                    <a class="btn btn-primary btn-sm" href="@Url.Action("CreateCourse", "Master")"><i class="fa fa-plus-square"></i> ADD Course</a>
                </div>
                <div class="clearfix"></div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive">
                            <table id="table" class="table">
                                <thead class="text-primary">
                                    <tr>
                                        <th>S.NO.</th>
                                        <th>CourseName</th>
                                        <th>CourseDescription</th>
                                        <th>Department</th>
                                        <th>CourseDuration</th>
                                        <th>CourseFee</th>
                                        <th>ACTION(s)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Select((data, index) => new { data, index }))
                                    {
                                        <tr>
                                            <td>
                                                @(item.index + 1)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.data.CourseName)
                                            </td>

                                            <td>
                                                @Html.DisplayFor(modelItem => item.data.CourseDescription)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.data.DeptId)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.data.CourseDuration)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.data.CourseFee)
                                            </td>

                                            <td>
                                                @Html.ActionLink("Edit", "EditCourse", new { id = item.data.Id }) |
                                               
                                                @Html.ActionLink("Delete", "DeleteCourse", new { id = item.data.Id }, new { onclick = "return confirm('Do you really want to delete this User?');" })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {

}
