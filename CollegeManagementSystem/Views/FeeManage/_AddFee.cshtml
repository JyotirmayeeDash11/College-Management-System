
@model CollegeManagementSystem.Models.Fees

<div class="row">
    <div class="col-lg-12">
        <form id="addFrm">
            <div class="form-group">
                <label for="lbl">Department</label>
                @Html.DropDownListFor(model => model.DeptId, (IEnumerable<SelectListItem>)ViewData["DEPTselectListItems"], new { @class = "form-control form-control-sm", required = "required", data_parsley_required_message = "Please Select Department" })
                <span class="help-block"></span>
            </div>
            <div class="form-group">
                <label for="lbCourseId">Course</label>
                <select class="CourseId form-control form-control-sm" name="CourseId" id="CourseId" @*style="width:380px;"*@ required="required" , data-parsley-required-message="Please Select Courses">
                    <option value="">- Select Courses -</option>
                </select>
                <span class="help-block"></span>
            </div>
            <div class="form-group">
                <label for="lblStudentId">Student</label>
                <select class="StudentId form-control form-control-sm" name="StudentId" id="StudentId" @*style="width:380px;"*@ required="required" , data-parsley-required-message="Please Select Student">
                    <option value="">- Select Students -</option>
                </select>
                <span class="help-block"></span>
            </div>
            <div class="form-group">
                <label for="lblCourseFee">Course Fee</label>
                @Html.EditorFor(model => model.CourseFee, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Course Fee", data_parsley_required_message = "Course Fee is required" } })
                <span class="help-block"></span>
            </div>
            <div class="form-group">
                <label for="lblPaidAmount">Paid Amount</label>
                @Html.EditorFor(model => model.PaidAmount, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Paid Amount", data_parsley_required_message = "Paid Amount is required" } })
                <span class="help-block"></span>
            </div>
            <div class="form-group">
                <label for="lblPaymentDate">Payment Date</label>
                @Html.EditorFor(model => model.PaymentDate, new { htmlAttributes = new { @class = "form-control", required = "required", placeholder = "Payment Date", data_parsley_required_message = "Select Payment Date",type="date" } })
                <span class="help-block"></span>
            </div>
            <input type="submit" id="btnAddFee" class="btn btn-success btn-block" value="ADD" />
        </form>
    </div>
</div>


