@model CollegeManagementSystem.Models.StudentModel
@{
    ViewBag.Title = "RegisterStudents";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /* Style for form container */
    .form-container {
        width: 60%;
        margin: 0 auto;
        padding: 20px;
        background-color: #f7f7f7;
        border: 1px solid #dcdcdc;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

    /* Style for form elements */
    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        color: #333;
    }

    input[type="text"],
    input[type="date"],
    select {
        width: 100%;
        padding: 10px;
        border: 1px solid #dcdcdc;
        border-radius: 5px;
        font-size: 16px;
    }

    button[type="submit"] {
        background-color: #007BFF;
        color: #fff;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        font-size: 18px;
        cursor: pointer;
    }

        button[type="submit"]:hover {
            background-color: #0056b3;
        }
</style>





@using (Html.BeginForm("RegisterStudents", "Admin", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.StudentName, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.StudentName, new { @class = "form-control", placeholder = "Student Name" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.DateOfBirth, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.DateOfBirth, new { @class = "form-control", @type = "date", placeholder = "Date of Birth" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.Gender, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Gender, new { @class = "form-control", placeholder = "Gender" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ContactInfo, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.ContactInfo, new { @class = "form-control", placeholder = "Contact Info" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Address, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.Address, new { @class = "form-control", placeholder = "Address" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AdmissionDate, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.AdmissionDate, new { @class = "form-control", @type = "date", placeholder = "Admission Date" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CourseEnrolled, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.CourseEnrolled, new { @class = "form-control", placeholder = "Course Enrolled" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Register Student</button>
        </div>
    </div>
}

<!-- SweetAlert script -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    $(document).ready(function () {
        $("form").submit(function (e) {
            e.preventDefault();
            var formData = $(this).serialize();

            $.post("/Admin/RegisterStudents", formData, function (data) {
                if (data.success) {
                    // Registration successful, trigger SweetAlert
                    Swal.fire({
                        icon: 'success',
                        title: 'Success!',
                        text: 'Student registration was successful.'
                    });

                    // Clear the form if needed
                    $('form')[0].reset();
                } else {
                    // Registration failed, display an error message
                    Swal.fire({
                        icon: 'error',
                        title: 'Error!',
                        text: data.message
                    });
                }
            });
        });
    });
</script>





